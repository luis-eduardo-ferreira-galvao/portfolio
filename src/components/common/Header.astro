---
const base = import.meta.env.BASE_URL.replace(/\/$/, '');
const navItems = [
  { href: import.meta.env.BASE_URL, label: 'Início' },
  { href: `${base}/sobre`, label: 'Sobre' },
  { href: `${base}/projetos`, label: 'Projetos' },
  { href: `${base}/automacoes`, label: 'Automações' },
  { href: `${base}/seo`, label: 'SEO' },
  { href: `${base}/contato`, label: 'Contato' },
];
---

<header class="sticky top-0 z-50 w-full backdrop-blur-lg bg-slate-900/80 border-b border-slate-800">
  <div class="container mx-auto px-4 h-16 flex items-center justify-between">
    <a href={import.meta.env.BASE_URL} class="text-xl font-bold bg-gradient-to-r from-blue-400 to-emerald-400 bg-clip-text text-transparent">
      DevPortfolio
    </a>
    
    <!-- Desktop Nav -->
    <nav class="hidden md:flex gap-6">
      {navItems.map((item) => (
        <a 
          href={item.href}
          class="text-sm font-medium text-slate-300 hover:text-white transition-colors"
        >
          {item.label}
        </a>
      ))}
    </nav>

    <!-- Mobile Menu Button (Placeholder for now) -->
    <button class="md:hidden text-slate-300">
      <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><line x1="4" x2="20" y1="12" y2="12"/><line x1="4" x2="20" y1="6" y2="6"/><line x1="4" x2="20" y1="18" y2="18"/></svg>
    </button>
  </div>
</header>
