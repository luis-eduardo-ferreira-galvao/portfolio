---
import Credentials from "../../pages/credentials.astro";

const base = import.meta.env.BASE_URL.replace(/\/$/, "");
const navItems = [
  { href: import.meta.env.BASE_URL, label: "Home" },
  { href: `${base}/about`, label: "About" },
  { href: `${base}/credentials`, label: "Credentials" },
  { href: `${base}/projects`, label: "Projects" },
  { href: `${base}/contact`, label: "Contact" },
];
---

<header class="sticky top-0 z-50 w-full backdrop-blur-lg bg-[#0d0d0d]/95">
  <div class="container mx-auto px-4 h-16 flex items-center justify-center">
    <!-- Desktop Nav -->
    <nav class="hidden md:flex gap-6">
      {
        navItems.map((item) => (
          <a
            href={item.href}
            class="text-md font-medium text-slate-300 hover:text-white transition-colors"
          >
            {item.label}
          </a>
        ))
      }
    </nav>

    <!-- Mobile Menu Button (Placeholder for now) -->
    <button class="md:hidden text-slate-300">
      <svg
        xmlns="http://www.w3.org/2000/svg"
        width="24"
        height="24"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"
        ><line x1="4" x2="20" y1="12" y2="12"></line><line
          x1="4"
          x2="20"
          y1="6"
          y2="6"></line><line x1="4" x2="20" y1="18" y2="18"></line></svg
      >
    </button>
  </div>
</header>
