---
import Layout from "../layouts/Layout.astro";
import { Image } from "astro:assets";
import profileImg from "../assets/images/luis-eduardo-ferreira-galvao-w-bg.png";
const base = import.meta.env.BASE_URL.replace(/\/$/, "");
---

<Layout
	title="Home | Luis Eduardo Ferreira GalvÃ£o"
	description="Computer Engineering Portfolio focused on solving real problems."
>
	<section class="py-20 text-center relative">
		<!-- Top Center Spotlight - Fixed to viewport top -->
		<div
			class="fixed top-0 left-1/2 -translate-x-1/2 -translate-y-[40%] w-[1000px] h-[500px] bg-white/5 blur-[120px] rounded-full pointer-events-none -z-10"
		>
		</div>

		<div class="relative inline-block mx-auto mb-10 group">
			<Image
				src={profileImg}
				alt="Engineering & Code"
				loading="lazy"
				class="relative z-10 rounded-full w-40 h-40 grayscale object-cover opacity-0 transition-all duration-700 hover:scale-105 hover:grayscale-0"
				onload="this.classList.remove('opacity-0')"
			/>
		</div>
		<h1 class="text-5xl md:text-5xl font-regular text-gray-400 mb-6">
			I'm Eduardo, <span class="text-white">accelerating business</span>
			<br /> with high performance solutions.
		</h1>
		<p class="text-xl text-slate-400 max-w-2xl mx-auto mb-10">
			Computer Engineering | Full-Stack Developer | SEO Specialist
		</p>
		<div class="flex justify-center gap-4">
			<a
				href={`${base}/projects`}
				class="bg-blue-600 hover:bg-blue-700 text-white font-medium py-3 px-6 rounded-lg transition-colors"
			>
				See Projects
			</a>
			<a
				href={`${base}/contact`}
				class="border border-slate-700 hover:border-slate-500 text-slate-300 hover:text-white font-medium py-3 px-6 rounded-lg transition-colors"
			>
				Contact me
			</a>
		</div>
	</section>
</Layout>
